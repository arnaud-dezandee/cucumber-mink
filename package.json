{
  "name": "cucumber-mink",
  "version": "0.0.0-semantic-release",
  "description": "Cucumber-js Mink - Step definitions library",
  "keywords": [
    "testing",
    "bdd",
    "cucumber",
    "cucumber-js",
    "gherkin",
    "tests",
    "webdriver",
    "phantomjs",
    "selenium"
  ],
  "license": "MIT",
  "author": {
    "name": "Arnaud Dezandee",
    "email": "dezandee.arnaud@gmail.com"
  },
  "homepage": "https://github.com/Adezandee/cucumber-mink",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adezandee/cucumber-mink.git"
  },
  "bugs": {
    "url": "http://github.com/Adezandee/cucumber-mink/issues"
  },
  "engines": {
    "node": ">= 4"
  },
  "main": "dist/mink.js",
  "bin": {
    "cucumber-mink": "dist/cli.js"
  },
  "scripts": {
    "start": "babel-node test/site/server.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "coverage": "babel-node ./node_modules/.bin/isparta cover _mocha -- --root src/ test/mocha/",
    "coverage:upload": "cat ./coverage/lcov.info | coveralls",
    "prepublish": "npm run compile",
    "precompile": "rm -rf dist/",
    "compile": "babel src/ -d dist/",
    "pretest": "eslint src/ test/",
    "test": "mocha --compilers js:babel-register test/mocha/",
    "e2e": "babel-node ./src/cli.js test/features -- -f progress",
    "protractor": "protractor protractor.cucumber.js"
  },
  "dependencies": {
    "bluebird": "3.4.6",
    "chai": "3.5.0",
    "cucumber": "1.2.2",
    "debug": "2.2.0",
    "immutable": "3.8.1",
    "lodash.defaultsdeep": "4.6.0",
    "meow": "3.7.0",
    "util-arity": "1.0.2",
    "webdriverio": "4.2.11"
  },
  "devDependencies": {
    "babel-cli": "~6.14.0",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-transform-object-rest-spread": "~6.8.0",
    "babel-preset-es2015": "~6.14.0",
    "babel-register": "~6.14.0",
    "body-parser": "~1.15.2",
    "coveralls": "~2.11.12",
    "cz-conventional-changelog": "~1.2.0",
    "eslint": "~3.4.0",
    "eslint-config-airbnb-base": "~5.0.3",
    "eslint-plugin-import": "~1.14.0",
    "express": "~4.14.0",
    "isparta": "~4.0.0",
    "jest-mock": "~17.0.0",
    "lodash.range": "~3.2.0",
    "mocha": "~3.0.2",
    "morgan": "~1.7.0",
    "protractor": "~4.0.4",
    "protractor-cucumber-framework": "~0.6.0",
    "semantic-release": "~4.3.5",
    "swig": "~1.4.2"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": 0,
      "no-underscore-dangle": 0,
      "no-console": 0,
      "new-cap": 0,
      "global-require": 0,
      "func-names": 0,
      "import/no-extraneous-dependencies": 0
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-object-rest-spread"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
